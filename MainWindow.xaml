<Window x:Class="VTBpdfTOcsv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTBpdfTOcsv"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid VerticalAlignment="Top" Margin="16,16,16,16" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="690"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="30" Margin="0 8 8 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="Filepath" Grid.Column="0" Text="" HorizontalAlignment="Stretch" Margin="0 0 8 0"/>
            <Button Name="Openfile" Grid.Column="1" Content="Открыть pdf" HorizontalAlignment="Stretch" Margin="8 0 0 0" Click="Openfile_Click"/>
        </Grid>

        <Button Name="ProcessBtn" Grid.Row="1" Content="Обработать" HorizontalAlignment="Stretch" Margin="0 8 8 0" Click="ProcessBtn_Click"/>
        <TextBox Name="OutputTextBox" Grid.Row="2" TextWrapping="NoWrap" Height="680" Margin="0,8,8,8" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"/>


    </Grid>
</Window>

<Window x:Class="VTBpdfReportConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Конвертор PDF отчётов по операциям ВТБ" Height="800" Width="1000" MinWidth="500" MinHeight="500">
    <Grid VerticalAlignment="Top" Margin="16,16,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0 8 8 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="Filepath" Grid.Column="0" Text="" HorizontalAlignment="Stretch" Margin="0 0 8 0"/>
            <Button Name="Openfile" Grid.Column="1" Content="Открыть pdf" HorizontalAlignment="Stretch" Margin="8 0 0 0" Click="Openfile_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label>Формат конвертации</Label>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 8 8 0">
                <RadioButton GroupName="rbOutputFormat" IsChecked="True" Checked="ToggleButton_OnChecked" >OFX</RadioButton>
                <RadioButton GroupName="rbOutputFormat" Checked="ToggleButton_OnChecked" >CSV</RadioButton>
                <RadioButton GroupName="rbOutputFormat" Checked="ToggleButton_OnChecked" >QIF</RadioButton>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Label>Опции обработки</Label>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 8 8 0">
                <CheckBox Name="cbOutput" IsChecked="True">Вывести в окно программы</CheckBox>
                <CheckBox Name="cbFile">Сохранить в файл</CheckBox>
            </StackPanel>
        </StackPanel>
        <Button Name="ProcessBtn" Grid.Row="3" Content="Обработать" HorizontalAlignment="Stretch" Margin="0 8 8 0" Click="ProcessBtn_Click"/>
        <TextBox Name="OutputTextBox" Grid.Row="4" Visibility="Collapsed" TextWrapping="NoWrap" MinHeight="100" Margin="0,8,8,8" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"/>
        <TextBox Grid.Row="5" Name="OutputLabel" BorderThickness="0,0,0,0"  IsReadOnly="True" IsReadOnlyCaretVisible="True"></TextBox>

    </Grid>
</Window>
